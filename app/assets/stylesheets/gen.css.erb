@import url('https://fonts.googleapis.com/css?family=Montserrat:400,500,700&display=swap');

html,body{width: 100%; height: 100%;}
*{padding: 0; margin: 0; font-family: 'Montserrat', sans-serif;}

.container{
	width: 100%;
	height: 100%;
}

/*---------------HEADER/*---------------*/
header{
	height: 60px;
	width: 100%;
	background-color: #EEEEEE;
	box-shadow: 0px 3px 13px rgba(0,0,0,0.21);
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
}
#header{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-self: center;
}
#logo_header{
	font-size: 1.875em;
	font-weight: 400;
	font-family: 'Montserrat', sans-serif;
	color: #A6A6A6;
	margin-left: 40px;
}
header ul{
	margin-right: 25px;
}
header li{
	list-style: none;
	display: inline;
}
header li a{
	color: #A6A6A6;
	font-family: 'Montserrat', sans-serif;
	font-size: 1.25em;
	font-weight: 300;
	text-decoration: none;
	margin-right: 15px;
	margin-left: 15px;
}
header li a::after{
	content: '';
	background-image: url(<%=asset_path('dot_1.png')%>);
	background-size: 6px 6px;
	width: 6px;
	height: 6px;
	position: relative;
	right: -15px;
	top: -3px;
	display: inline-block;
}
header li:last-child a::after{
	content: none;
	background-image: none;
}
.active{
	color: #FF7A7A;
}


/*---------------FOOTER---------------*/
footer{
	width: 100%;
	height: 60px;
	background-color: #EEEEEE;
	font-family: 'Montserrat';
	font-size: 1.25em;
	font-weight: 300;
	color: #757575;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center
}
footer div span{
	font-weight: 400;
}
#cpr{
	font-weight: 500;
}
.btn{
	cursor: pointer;
}

@media screen and (max-width: 1500px){
	section{
		margin: 20px 10px !important;
		flex-direction: row;
		justify-content: center;
		align-items: center;
	}
}

@media screen and (max-width: 1024px){
	#logo_header{
		margin: 10px 0 10px 10px;
	}
	#ham_list, #ham_list ul{
		margin: 0 0 0 0px;
	}
}

@media screen and (max-width: 900px){
	section{
		flex-direction: row;
		justify-content: center;
		align-items: center;
	}
}

@media screen and (max-width: 840px){
	#ham_list a{
		margin: 0 8px 0 3px;
	}
	#ham_list a:after{
		content: '';
		background-image: none;
		width: 1px;
		height: 20px;
		background-color: #A6A6A6;
		right: -7px;
		top: 5px;
	}
	#ham_list li:last-child a::after{
		content: none;
		width: 0px;
		height: 0px;
		background-color: rgba(0,0,0,0);
	}
}

@media screen and (max-width: 768px){
	header{
		flex-direction: column;
		justify-content: flex-start;
		align-self: space-between;
		height: auto;
		position: relative;
	}
	/*--Replace logo--*/
	#logo_header{
		vertical-align: center;
		font-size: 1.875em;
		font-weight: 400;
		font-family: 'Montserrat', sans-serif;
		color: #A6A6A6;
	}
	#header{
		width: 100%;
		flex-direction: row;
		justify-content: space-between;
		align-self: center;
	}
	/*--Remove dots in menu list--*/
	#ham_list ul li.list a::after{
		content: none;
		background-image: none;
		background-size: 0px 0px;
		width: 0;
		height: 0;
		display: inline-block;
		background-color: rgba(0,0,0,0);
	}
	header ul{
		width: 100%;
	}
	header li{
		margin: 5px 0px;
		list-style: none;
		display: block;
	}
	.list{
		position: relative;
		width: 100%;
	}
	/*--Add grey line in menu--*/
	.list:after{
		content: '';
		width: 100%;
		height: 1px;
		box-shadow: 0 0px 1px #CCCCCC;
		background-color: #CCCCCC;
		position: absolute;
		bottom: -5px;
		left: 0;
	}
	/*--------------MENU BUTTON--------------*/
	#menu_container{
		position: absolute;
		top: 0px;
		right: 0px;
		width: 100%;
	}
	#ham-container{
		display: flex;
		justify-content: center;
		align-self: center;
	}
	#ham_menu{
		cursor: pointer;
		border: 1px solid #A6A6A6;
		margin: 5px 5px 5px 5px;
	}
	#ham_list{
		max-height: 0px;
		width: 100%;
		top: 60px;
		left: 0;
		align-self: end;
		overflow: hidden;
		transition:max-height 0.4s ease-in-out;
	}
	.bar{
		width: 30px;
		height: 4px;
		margin: 5px 2px 5px 2px;
		transition: 0.4s;
		background-color: #A6A6A6;
	}

	.change .bar1{
		transform:  rotateZ(45deg) translate(6px, 6px);
	}
	.change .bar2{
		opacity: 0;
	}
	.change .bar3{
		transform: rotateZ(-45deg) translate(7px, -6px);
	}
	#ham_list.change{
		max-height: 200em;
		overflow: auto;
	}
}



