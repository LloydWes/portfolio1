
/*---------------SECTION/*---------------*/
section{
	margin: 45px 170px 45px 170px;
	display: flex;
	flex-direction: row;
	align-items: flex-start;
	justify-content: center;
	flex-wrap: wrap;
}
.container-site{
	width: 350px;
	height: 463px;
	margin: 10px 19px 25px 19px;
	border-radius: 5px;
	box-shadow: 5px 5px 6px rgba(0,0,0,0.22);
	font-family: 'Montserrat', sans-serif;
}
.container-site:hover .img-overlay{
	height: 100%;
}
.container-site:hover .img-overlay img{
	opacity: 1;
}
.test{
	font-size: 1em;
}
.card-header{
	box-sizing: border-box;
	width: 100%;
	height: 80px;
	color: white;
	background-color: #FF7A7A;
	border-radius: 5px 5px 0 0;
	border: 1px solid rgba(112,112,112,0.45);
	border-bottom: 0px;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: flex-start;
	padding: 9px 0px 5px 21px;
}
.card-header h3{
	font-size: 1.5625em;
}
.card-header p{
	font-size: 0.9375em;
}

.card-img{
	box-sizing: border-box;
	border-left: 1px solid rgba(112,112,112,0.45);
	border-right: 1px solid rgba(112,112,112,0.45);
	width: 100%;
	height: 218px;
	position: relative;
}
.card-img img{
	width: 100%;
	height: auto;
}
.img-overlay{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 0%;
	background-color: rgba(255,255,255,0.6);
	transition: 0.3s;
	display: flex;
	justify-content: center;
	align-items: center;
}
.img-overlay img{
	max-width: 50px;
	height: auto;
	transition: 0.3s;
	opacity: 0;
}
.card-text{
	box-sizing: border-box;
	border-left: 1px solid rgba(112,112,112,0.45);
	border-right: 1px solid rgba(112,112,112,0.45);
	width: 100%;
	height: 117px;
	color: #707070;
	font-size: 1em;
	padding: 12px 12px 14px 20px;
}
.card-footer{
	box-sizing: border-box;
	width: 100%;
	height: 48px;
	color: white;
	background-color: #FF7A7A;
	border-radius: 0 0 5px 5px;
	border: 1px solid rgba(112,112,112,0.45);
	border-top: 0px;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 0.9375em;
}











