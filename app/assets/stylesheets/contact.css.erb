/*---------------SECTION/*---------------*/
body.body{/*
	min-height: 100vh;*/
}
section{
	flex-grow: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding: 25px;
	background-color: #EEEEEE;
	border: 1px solid rgba(112,112,112,0.6);
	border-radius: 6px;
	margin-left: 210px;
	margin-right: 210px;
	margin-top: 30px;
	margin-bottom: 30px;
}
section h3{
	font-size: 1.875em;
	font-weight: 300;
	margin-top: 0px;
	margin-bottom: 30px;
	color: #393939;
	margin-left: 0px;
	position: relative;
}
section h3:after{
	content: '';
	width: 60px;
	box-sizing: border-box;
	height: 0px;
	border-bottom: 3px solid #393939;
	position: absolute;
	bottom: -4px;
	left: 20%;
}
form{
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: space-between;
}
form *{
	margin-right: 25px;
}
label{
	color: #393939;
}
.form-container{
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-self: flex-start;
	margin: 10px 0px;
}
input{
	height: 30px;
	font-size: 1.25em;
}
textarea{
	height: 290px;
}
input[type='submit']{
	min-width: 120px;
	width: 120px;
	height: 55px;
	color: #FF7A7A;
	font-size: 1.25em;
	font-weight: 500;
	align-self: center;
	margin: 10px 0;
}
input, textarea{
	width: 490px;
	min-width: 490px;
	border: 1px solid rgba(112,112,112,0.6);
	border-radius: 3px;
}



