/*---------------SECTION/*---------------*/
section{
	flex-grow: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding: 25px;
	background-color: #EEEEEE;
	border: 1px solid rgba(112,112,112,0.6);
	border-radius: 6px;
	margin-left: 210px;
	margin-right: 210px;
	margin-top: 30px;
	margin-bottom: 30px;
}
.section-container{
	display: flex;
	flex-direction: row;
}
article{
	flex-shrink: 1;
	flex-basis: 66%;
	display: flex;
	flex-direction: column;	
	font-family: 'Montserrat', sans-serif;
	color: #393939;
}
section h3{
	font-size: 1.875em;
	font-weight: 300;
	margin-top: 0px;
	margin-bottom: 30px;
	color: #393939;
	margin-left: 0px;
	/*align-self: center;*/
	position: relative;
}
section h3:after{
	content: '';
	width: 125px;
	box-sizing: border-box;
	height: 0px;
	border-bottom: 3px solid #393939;
	position: absolute;
	bottom: -4px;
	left: 10%;
}
.text-container{
	font-size: 1.1em;
	margin-left: 20px;
	/*	font-size: 1em;*/
}
.text-container *{
	line-height: 24px;
	font-size: 1em;
}
article ul{
	list-style-type: '- ';
	list-style-position: inside;
}
aside{
	flex-shrink: 3;
	flex-basis: 33%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	margin: 0px 10px 20px 0px;
	/*position: relative;*/
}
aside img{
	border-radius: 10px;
	width: 95%;
	height: auto;
	/*position: absolute;
	top: 160px;
	right: 15px;*/
}
.voir-cv{
	padding: 16px 25px;
	border: 1px solid rgba(112,112,112,0.6);
	background-color: #EEEEEE;
	border-radius: 4px;
	margin-top: 35px;
	height: 55px;
	font-weight: 500;
	line-height: 20px;
	color: #FF7A7A;
	text-decoration: none;
}
.cv-link-container{
	display: flex;
	font-size: 1.25em;
	flex-direction: row;
	justify-content: center;
	align-items: flex-start;
	margin-top: 30px;
}
.social-container{
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	font-size: 1.1em;
	margin-top: 32px;
	margin-left: 20px;
}
.social-container p{
	margin-bottom: 7px;
}
.social-icons img{
	width: 50px;
	height: auto;
	margin: 0px 5px;
}





@media screen and (max-width: 890px){
	.section-container{
		flex-direction: column-reverse;
	}
	aside img{
		width: 50%;
	}

	.cv-link-container{
		font-size: 1em;
	}
}

@media screen and (max-width: 500px){
	aside img{
		width: 80%;
	}
}





